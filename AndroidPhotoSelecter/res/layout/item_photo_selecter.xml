<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imv_item_photo_selecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/empty"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_photo" />

    <TextView
        android:id="@+id/tv_item_photo_selecter_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imv_item_photo_selecter"
        android:layout_alignTop="@+id/imv_item_photo_selecter"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/selector_check_box_tv"
        android:padding="6dp" />

</RelativeLayout>